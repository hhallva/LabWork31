<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel>
            <Label   Content="Цена"/>
            <Slider x:Name="CostSlider" Minimum="0" Maximum="1000000" ValueChanged="CostSlider_ValueChanged" SmallChange="1"/>

            <Label Content="Процент от цены"/>
            <Slider x:Name="PercentSlider" Minimum="0" Maximum="100" ValueChanged="PercentSlider_ValueChanged" SmallChange="1"/>

            <TextBlock HorizontalAlignment="Left">
                <Label x:Name="CostLabel" Content="Сумма: "/>
                <Label x:Name="PercentLabel" Content="Процент: "/>
                <Label x:Name="ResultLabel" Content="Результат: "/>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
