<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Цена"/>
        <Slider x:Name="SummSlider" Minimum="1" Maximum="1000000" ValueChanged="ValueChanged"/>

        <Label Content="Процент от цены"/>
        <Slider x:Name="PercentSlider" Minimum="1" Maximum="100"/>

        <Label Content="Результат: "/>
    </StackPanel>
</Window>
